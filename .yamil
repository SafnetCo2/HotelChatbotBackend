version: "3.8"
services:
  web:
    build:
      context: .
    ports:
      - "5000:5000"
    environment:
      - DATABASE_URL=mysql://root:Root@1234@db:3306/HotelDb
  db:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: Root@1234
      MYSQL_DATABASE: HotelDb
    ports:
      - "3306:3306"
